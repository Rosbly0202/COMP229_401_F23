  <script src="/javascripts/jquery.min.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>
</head>

<body> 
  <div class="header">
    <%- include("header") %>
  </div>
  <div class="content contact-me-content">
    <div class="contant-me-head">
      <h3>+1 416526798</h3>
      <h3 class="email">1549336434@gmail.com</h3>
      <h3 style="margin-bottom: 40px;">Please leave a message</h3>
      <div class="form">
        <form>
          <div class="form-group">
            <label>Name</label>
            <input type="text" style="width: 400px;" class="form-control input-item name" placeholder="name">
